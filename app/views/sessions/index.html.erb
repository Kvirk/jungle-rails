<h1>Login</h1>

<%= form_tag '/login' do %>
<div class="col-sm-4">
  <%if flash[:notice] %>
    <div class="alert alert-danger">
    <strong id="notice"><%= flash[:notice] %></p>
  </div>
  <% end %>
  <div class="form-group">
  Email: <%= text_field_tag :email, nil, class: 'form-control' %>
  Password: <%= password_field_tag :password, nil, class: 'form-control' %>
  <%= submit_tag "Submit", class: 'btn btn-primary' %>
  </div>
</div>

<% end %>