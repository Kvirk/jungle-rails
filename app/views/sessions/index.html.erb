<h1>Login</h1>

<%= form_tag '/login' do %>
<div class="col-sm-4">
  <div class="form-group">
  Email: <%= text_field_tag :email, nil, class: 'form-control' %>
  Password: <%= password_field_tag :password, nil, class: 'form-control' %>
  <%= submit_tag "Submit", class: 'btn btn-primary' %>
  </div>
</div>

<% end %>